<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_59_BannerPlex">
        <!--Panel-->
        <control type="group">
            <visible>Control.IsVisible(59)</visible>
            <include>animation_view_change</include>
			
            <!-- ID="59" -->
            <control type="panel" id="59">
                <posx>45</posx>
                <posy>340</posy>
                <width>1860</width>
                <height>570</height>
                <onup>56</onup>
                <ondown>56</ondown>
                <onleft>9000</onleft>
                <onright>60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31425">bigwide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
				<visible>container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)</visible>
                <itemlayout height="145" width="610" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
					<control type="group">
						<posy>10</posy>
						<posx>10</posx>
						<control type="image">
							<width>590</width>
							<height>120</height>
							<bordersize>-5</bordersize>
							<texture>colors/color_white.png</texture>
							<colordiffuse>$INFO[Skin.String(ViewDetailsFocusColor)]</colordiffuse>
							<aspectratio scalediffuse="false" align="left">stretch</aspectratio>
							<visible>Skin.HasSetting(EnableTouchSupport) + StringCompare(Container(56).ListItem.Label, ListItem.Label)</visible>
						</control>
						<control type="image">
							<width>604</width>
							<height>126</height>
							<texture>home/home_shadow.png</texture>
						</control>
						<include>BannerPlexlayout</include>
					</control>
                </itemlayout>
                <focusedlayout height="145" width="610" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                    <control type="group">
						<posy>10</posy>
						<posx>10</posx>
                        <animation type="focus">
                            <effect type="zoom" start="100" end="105" center="auto" time="150" />
                        </animation>
                        <animation type="unfocus">
                            <effect type="zoom" start="105" end="100" center="auto" time="150" />
                        </animation>
						<control type="image">
							<width>590</width>
							<height>120</height>
							<bordersize>-5</bordersize>
							<texture>colors/color_white.png</texture>
							<colordiffuse>$INFO[Skin.String(ViewDetailsFocusColor)]</colordiffuse>
							<aspectratio scalediffuse="false" align="left">stretch</aspectratio>
						</control>
						<include>BannerPlexlayout</include>
                    </control>
					
                </focusedlayout>
            
			</control>
        
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(56)</visible>
				<right>15</right>
				<posy>345</posy>
				<width>25</width>
				<height>560</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>56</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling]">Conditional</animation>
			</control>

		
		
		</control>
   </include>
</includes>